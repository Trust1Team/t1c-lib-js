{
  "name": "trust1connector",
  "version": "2.2.3",
  "description": "The Trust1Connector library (T1C-Lib), is a javascript library to communicate with the Trust1Connector. The library simplifies the execution to the connector and works asynchronously.",
  "main": "dist/GCLLib.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "clean": "shx rm -rf dist lib lib-esm",
    "ts": "tsc && tsc -m es6 --outDir lib-esm && webpack --mode=none",
    "test": "yarn jest -i",
    "build": "npm run clean && npm run ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Trust1Team/t1c-lib-js.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/test/unit/plugins/smartcards/pkcs11/pkcs11.spec.ts"
    ],
    "verbose": true,
    "testURL": "https://localhost:10443"
  },
  "author": "Trust1Team",
  "license": "SEE LICENSE IN license.txt",
  "homepage": "https://github.com/Trust1Team/t1c-lib-js",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/debug": "^0.0.30",
    "@types/es6-promise": "^3.3.0",
    "@types/form-data": "^2.2.1",
    "@types/jest": "^23.3.1",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.104",
    "@types/pkijs": "^0.0.1",
    "@types/platform": "^1.3.1",
    "asn1js": "^2.0.21",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "del": "^3.0.0",
    "dts-bundle": "^0.7.3",
    "jest": "^23.4.2",
    "jest-extended": "^0.8.1",
    "shx": "^0.3.2",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "uglify-js": "^3.4.5",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "Base64": "^1.0.1",
    "axios": "^0.18.0",
    "bases": "^0.2.1",
    "core-js": "^2.5.3",
    "cuid": "^1.3.8",
    "es6-object-assign": "^1.1.0",
    "form-data": "^2.3.1",
    "jsencrypt": "^3.0.0-rc.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "moment": "^2.20.1",
    "object-assign": "^4.1.1",
    "path": "^0.12.7",
    "pkijs": "2.0.56",
    "platform": "^1.3.5",
    "semver": "^5.4.1",
    "sha256": "^0.2.0",
    "store2": "^2.7.0",
    "uuid": "^3.3.2"
  }
}
