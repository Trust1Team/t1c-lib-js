{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "diagnostics": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "lib": [ "es2015", "dom" ]
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}